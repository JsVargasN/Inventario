@model Inventario.ViewModels.ProductosViewModel

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Detalles del Producto</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Precio</dt>
                <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Stock</dt>
                <dd class="col-sm-9" class="@(Model.Stock <= 5 ? "text-danger" : "")">@Model.Stock</dd>

                <dt class="col-sm-3 fw-bold">Categoría</dt>
                <dd class="col-sm-9">@Model.CategoriaNombre</dd>
            </dl>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (si no está en _Layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">